<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CalcActivity">

    <TextView
        android:id="@+id/valueDisplay"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/back"/>
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/valueDisplay"
        android:onClick="clearValueDisplay"
        android:text="AC"/>


    <Button
        android:id="@+id/button7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonClear"
        android:onClick="clickNumberButton"
        android:text="7"/>
    <Button
        android:id="@+id/button8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonClear"
        android:layout_toRightOf="@id/button7"
        android:onClick="clickNumberButton"
        android:text="8"/>
    <Button
        android:id="@+id/button9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonClear"
        android:layout_toRightOf="@id/button8"
        android:onClick="clickNumberButton"
        android:text="9"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button7"
        android:onClick="clickNumberButton"
        android:text="4"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button8"
        android:layout_toRightOf="@id/button4"
        android:onClick="clickNumberButton"
        android:text="5"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button5"
        android:onClick="clickNumberButton"
        android:text="6"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button4"
        android:onClick="clickNumberButton"
        android:text="1"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button5"
        android:layout_toRightOf="@id/button1"
        android:onClick="clickNumberButton"
        android:text="2"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button2"
        android:onClick="clickNumberButton"
        android:text="3"/>
    <Button
        android:id="@+id/button0"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/button1"
        android:onClick="clickNumberButton"
        android:text="0"/>
    <Button
        android:id="@+id/buttonDecimal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/button0"
        android:onClick="clickNumberButton"
        android:text="."/>
    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/buttonDecimal"
        android:onClick="clickNumberButton"
        android:text="+"/>
    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button3"
        android:onClick="clickNumberButton"
        android:text="-"/>
    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button6"
        android:onClick="clickNumberButton"
        android:text="&#215;"/>
    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonClear"
        android:layout_toRightOf="@id/button9"
        android:onClick="clickNumberButton"
        android:text="&#247;"/>
    <Button
        android:id="@+id/buttonLeftPeren"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/valueDisplay"
        android:layout_toRightOf="@id/buttonClear"
        android:onClick="clickNumberButton"
        android:text="("/>
    <Button
        android:id="@+id/buttonRightPeren"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/valueDisplay"
        android:layout_toRightOf="@id/buttonLeftPeren"
        android:onClick="clickNumberButton"
        android:text=")"/>
    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/valueDisplay"
        android:layout_toRightOf="@id/buttonRightPeren"
        android:onClick="backspace"
        android:text="&#171; Back"/>
    
    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/buttonPlus"
        android:onClick="calculateIt"
        android:text="&#61;"/>


</RelativeLayout>
